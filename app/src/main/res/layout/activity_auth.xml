<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/login"
            style="@style/TextStyle_14SP_Normal_White"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/login" />

        <TextView
            android:id="@+id/signup"
            style="@style/TextStyle_14SP_Normal_White"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/signup" />
    </LinearLayout>

    <com.cuongmv162.customizedsnackbar.view.customized.SnackbarView
        android:id="@+id/my_snackbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.cuongmv162.customizedsnackbar.view.component.LoginComponentView
        android:id="@+id/auth_component_view_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.cuongmv162.customizedsnackbar.view.component.SignUpComponentView
        android:id="@+id/auth_component_view_signup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

</LinearLayout>